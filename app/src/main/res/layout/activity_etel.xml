<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="8dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/neve"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="8dp"
            android:textSize="25dp"
            android:textAlignment="center"
            android:textColor="?android:textColorSecondary" />

        <ImageView
            android:id="@+id/kep"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/neve"
            android:src="@drawable/spagetti"
            android:adjustViewBounds="true" />

        <TextView
            android:id="@+id/ar"
            android:text="1500ft"
            android:textSize="20dp"
            android:textAlignment="center"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/kep"
            android:padding="8dp"
            />


        <TextView
            android:id="@+id/tetszikvagynem"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/ar"
            android:layout_marginBottom="12dp"
            android:padding="8dp"
            android:layout_centerHorizontal="true"/>

        <ImageView
            android:id="@+id/kosar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/tetszikvagynem"
            android:layout_centerInParent="true"
            android:minWidth="48dp"
            android:minHeight="48dp"
            android:onClick="kosarba"
            android:src="@drawable/shopping"
            app:tint="@color/black" />

        <ImageView
            android:id="@+id/like"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/tetszikvagynem"
            android:layout_alignRight="@id/kosar"
            android:layout_marginRight="60dp"
            android:minWidth="48dp"
            android:minHeight="48dp"
            android:src="@drawable/like"
            app:tint="@color/black" />

        <ImageView
            android:id="@+id/dislike"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/tetszikvagynem"
            android:layout_alignLeft="@id/kosar"
            android:layout_marginLeft="60dp"
            android:minWidth="48dp"
            android:minHeight="48dp"
            android:src="@drawable/dislike"
            app:tint="@color/black" />

    </RelativeLayout>
</androidx.cardview.widget.CardView>